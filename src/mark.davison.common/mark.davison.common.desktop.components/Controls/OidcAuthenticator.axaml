<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mdc="using:mark.davison.common.desktop.components"
             xmlns:mdcc="using:mark.davison.common.desktop.components.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="mark.davison.common.desktop.components.OidcAuthenticator">
	<StackPanel Orientation="Vertical" VerticalAlignment="Center">
		
		<Button IsVisible="{Binding AnyLoggingIn, Converter={x:Static BoolConverters.Not}}" 
				VerticalAlignment="Center" 
				HorizontalAlignment="Center" 
				Command="{Binding LoginCommand}">
			Click here to log in
		</Button>
		
		<ProgressBar IsVisible="{Binding AnyLoggingIn}" 
					 IsIndeterminate="True" 
					 ShowProgressText="False" Margin="16"/>
		
		<TextBlock VerticalAlignment="Center" 
				   HorizontalAlignment="Center" 
				   Text="{Binding Response}"/>
		
	</StackPanel>
</UserControl>
