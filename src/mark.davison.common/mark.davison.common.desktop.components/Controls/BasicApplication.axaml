<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mdc="using:mark.davison.common.desktop.components"
             xmlns:mdcc="using:mark.davison.common.desktop.components.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="mark.davison.common.desktop.components.BasicApplication">

	<UserControl.DataTemplates>
		<DataTemplate DataType="mdcc:BasicApplicationViewModel">
			<mdc:InnerApplication />
		</DataTemplate>
		<DataTemplate DataType="mdcc:OidcAuthenticatorViewModel">
			<mdc:OidcAuthenticator />
		</DataTemplate>
	</UserControl.DataTemplates>

	<ContentControl Content="{Binding ActiveViewModel}" />
</UserControl>
