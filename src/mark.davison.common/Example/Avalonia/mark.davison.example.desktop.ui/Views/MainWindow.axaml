<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:mark.davison.example.desktop.ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:mdc="clr-namespace:mark.davison.common.desktop.components;assembly=mark.davison.common.desktop.components"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="mark.davison.example.desktop.ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Example desktop">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
	<mdc:BasicApplication DataContext="{Binding BasicApplicationViewModel}"/>
</Window>
