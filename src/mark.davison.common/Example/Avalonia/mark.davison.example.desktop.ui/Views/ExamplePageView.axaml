<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:mark.davison.example.desktop.ui.ViewModels"
		     xmlns:mdc="clr-namespace:mark.davison.common.desktop.components;assembly=mark.davison.common.desktop.components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="mark.davison.example.desktop.ui.ExamplePageView"
			 x:DataType="vm:ExamplePageViewModel">
	<Design.DataContext>
		<vm:ExamplePageViewModel/>
	</Design.DataContext>
	
	<TextBlock VerticalAlignment="Center" 
			   HorizontalAlignment="Center" 
			   Text="{Binding Name}"
			   FontSize="64"/>
</UserControl>
